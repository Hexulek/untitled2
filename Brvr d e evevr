#include <iostream>
#include <fstream>
#include <string>
#include <map>
#include <sstream>

void countWordFrequencies(const std::string& filename) {
    std::ifstream file(filename); // Otwieranie pliku
    if (!file.is_open()) {
        std::cerr << "Nie można otworzyć pliku: " << filename << std::endl;
        return;
    }

    std::map<std::string, int> wordFrequencies;
    std::string line, word;

    // Czytanie pliku linia po linii
    while (std::getline(file, line)) {
        std::stringstream ss(line); // Przetwarzanie każdej linii
        while (ss >> word) {
            // Zwiększamy licznik dla danego słowa
            ++wordFrequencies[word];
        }
    }

    file.close();

    // Wyświetlenie wyników
    std::cout << "Częstotliwości słów w pliku " << filename << ":\n";
    for (const auto& entry : wordFrequencies) {
        std::cout << entry.first << ": " << entry.second << "\n";
    }
}

int main() {
    std::string filename;
    std::cout << "Podaj nazwę pliku: ";
    std::cin >> filename;

    countWordFrequencies(filename);

    return 0;
}
